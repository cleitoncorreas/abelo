<%= title t(:choose_the_type_of_page:) %> 

<ul id="article_types">
  <% for type in @article_types %>
    <li>
    <%= link_to type[:short_description], :action => 'new', :type => type[:name], :parent_id => params[:parent_id] %>
    <br/> <%= type[:description] %>
    </li>
  <% end %>
</ul>

<%= lightbox_close_button(t(:cancel)) %>
