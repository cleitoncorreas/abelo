
<%= title _('Listing products') %>

<% @products.map do |p| %>
  <%=
  display_list(
    [
      { :content => p.images.map{|i| show_image i}[0], :option => 'Img' }, 
      { :title => _('Code:'), :content => p.id, :option => 'Code' },
      { :content =>  p.description, :option => 'Name' },
      { :title => _('Price:'), :content => p.sell_price, :option => 'Price'}
    ],
    {:ul_options => 'products'}
   )
  %>
<% end %>
