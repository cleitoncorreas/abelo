
<%= title(_('Editing product')) %>

<% form_tag :action => 'update', :id => @product do %>
  <div id="form">
    <%= render :partial => 'form' %>
  </div>
  <div class='button_bar'>
    <%= button _('Save'), :save %>
    <%= button _('Cancel'), :cancel, :action => 'list' %>
    <%= button _('Images'), :add, :action => 'images', :id => @product %>
  </div>
<% end %>
