<%= title(_('New product')) %>

<% form_tag :action => 'create' do %>
  <%= render :partial => 'form' %>
  <div class='button_bar'>
    <%= button "Create", :save %>
    <%= button 'Cancel', :cancel, :action => 'list' %>
    <%= button_remote(_('Reset'), :reset , {:update => 'form', :url => {:action => 'reset'}}) %>
  </div>
<% end %>
