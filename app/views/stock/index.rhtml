<%= title _('Stock control') %>

<ul class="stock">
<% @products.map do |p| %>
<%= display_list(
      [
        { :content => p.images.map{|i| show_image i}[0], :option => 'img'},
        { :content => p.description, :option => 'name'},
        { :content => p.ammount_in_stock, :option => 'number'},
        {:content => link_to(_('New entry'), :action => 'new_entry', :id => p.id), :option => 'button_new'},
      ]
  )
  %>
<% end %>
</ul>
