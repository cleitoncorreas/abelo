
<%= title _('New stock entry for %s') % @stock.product.name %>

<div id="add_payment">
<% form_tag( :action => 'create', :product_id => @stock.product )  do %>
  <div id="stock_form">
    <%= render :partial => 'form'%>
  </div>

  <%= subtitle _("Payments [%s]") % submit_to_remote( 'payment_button' , _('Add'), :url => {:action => 'create', :product_id => @stock.product, :id => @stock}) %>
  <%= display_new_info_options @product %> 
<% end %>

</div>
