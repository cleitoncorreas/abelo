<% if @option == 'day' %>
  <p><b><%= _('Period: ') %></b><%= select_date(date = Date.today) %></p>
<% elsif @option == 'month' %>
  <p><b><%= _('Period: ') %></b><%= select_month(date = Date.today) %></p>
<% elsif @option == 'year' %>
  <p><b><%= _('Period: ') %></b><%= select_year(date = Date.today) %></p>
<% end %>
