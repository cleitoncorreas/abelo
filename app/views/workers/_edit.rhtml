<div id='sidebar'>
  <%= show_item_bar("new_worker", _("Edit worker")) %>
  <div id="new_worker" class="itembar">
    <div>
      <%= start_form_tag :action => 'update', :id => @worker %>
    <%= render :partial => 'form' %>
    <div class='button_bar'>
      <%=  submit_to_remote "button_remote", _("Save"), :url => {:action => "update", :id => @worker}, :update => {:success => 'warp', :failure => 'sidebar'} %>
      <%= button _('Cancel'), :cancel, :action => 'list' %>
    </div>
    <%= end_form_tag %>
    </div>
  <%= hide_item_bar("new_worker")%>
  </div>
</div>

