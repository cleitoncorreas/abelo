<% title _('Editing mass mail') %>

<%= start_form_tag ({:action => 'update', :id => @mass_mail}, :multipart => true) %>
  <%= render :partial => 'form' %>
  <div class='button_bar'>
    <%= button 'save',_('Save'), :save %>
    <%= button 'cancel',_('Cancel'), :cancel, :action => 'list' %>
  </div>
<%= end_form_tag %>

<%= link_to_function _('Attach a file '), nil, :id => "attach_file" do |page|
    page.insert_html :after, :mass_mail_subject, file_field_tag ('file[]')
end %>
