<% form_tag :action => 'filter_customers', :id => @mass_mail.id do %>
<br><p><label for="categories"><%= t(:categories) %></label>
<%= select_categories @mass_mail  %></p>
<br><p><label for="consumed_products"><%= t(:consumed_products) %></label>
<%= select_products @mass_mail  %></p>
<%= button 'save', t(:filter), :save %>
<%= button 'back', t(:back), :cancel, :action => "show", :id => @mass_mail.id %>
<% end %>
