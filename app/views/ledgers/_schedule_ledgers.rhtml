<table>
  <tr>
    <th colspan=3> 
      <%= t(:scheduled_ledgers) %>
      <%= link_to t(:unschedule_all), :action => :unschedule_all_ledger, :id => @ledger %> 
    </th>
  </tr>
  <tr> 
    <th> <%= t(:date) %>  </th>
    <th> <%= t(:description) %>  </th>
    <th> <%= t(:options) %>  </th>
  </tr>
  <% @ledger.ledgers_scheduled.each do |ledger| %>
  <tr>
    <td> <%= parse_date(ledger.date, false) %> </td>
    <td> <%= ledger.description %> </td>
    <td> <%= link_to_remote t(:unschedule'),_:update_=>_'abelo_schedule_ledger',_:url_=>_{:action_=>_'unschedule_ledger',_:ledger_id_=>_ledger,_:id_=>_@ledger},_:failure_=>_"$('abelo_schedule_ledger).inneHTML= request.responseText" %> </td>
  </tr>
  <% end %>
  
</table>
