<%= display_field_edit(@ledger, 'schedule_periodicity',
      :title => _('Periodicity?'),
      :content => select_item('ledger', 'schedule_periodicity', @periodicities),
      :html_options => {:class => 'line_item'}
    )
%>

<div id="periodicity_informations" >

  <%  unless @ledger.schedule_periodicity.blank? %>
    <%= render :partial => 'get_interval_informations' %>
  <% end %>

</div>

<%= observe_field('ledger_schedule_periodicity',
      :update => 'periodicity_informations',
      :url => {:action => 'get_interval_informations' },
      :with => "'value=' +  escape(value)"
    )
%>

