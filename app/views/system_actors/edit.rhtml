<%= title(_('Editing %s') % SystemActor.describe(@actor)) %>

<% form_tag :action => 'update', :id => @system_actor do %>
  <%= render :partial => 'form' %>
  <div class='button_bar'>
    <%= button 'save',  _('Save'), :save %>
    <%= button 'cancel', _('Cancel'), :cancel, :action => 'list', :actor => @actor %>
    <%= button_remote('cancel', _('Cancel'), :cancel, :url => {:action => 'reset', :actor => @actor}, :update => 'form' ) %>
  </div>
<% end %>
