<div id='sidebar'>
  <%= show_item_bar("new_worker", _("Edit %s") % SystemActor.describe(@actor)) %>
  <div id="new_worker" class="itembar">
    <% form_tag :action => 'update', :id => @system_actor do %>
      <div id="form">
        <%= render :partial => 'form' %>
      </div>

      <div class='button_bar'>
        <%=  submit_to_remote "button_remote", _("Save"), :url => {:action => "update", :id => @system_actor, :actor => @actor}, :update => {:success => 'warp', :failure => 'form'} %>
        <%= button t(:cancel), :cancel, :action => 'list', :actor => @actor %>
      </div>
    <% end %>
    <%= hide_item_bar("new_worker")%>
  </div>
</div>

