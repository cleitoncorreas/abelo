<%= title _('New %s') % SystemActor.describe(@actor) %>

<% form_tag :action => 'create' do %>
  <%= render :partial => 'form' %>
  <div class='button_bar'>
    <%= button 'save', _('Create'), :save %>
    <%= button 'cancel', _('Cancel'), :cancel, :action => 'list' %>
    <%= button_remote('', :reset ,{:update => 'form_reg', :url => {:action => 'reset', :actor => @actor}}, :title => _('Reset')) %>
  </div>
<% end %>
