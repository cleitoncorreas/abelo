<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
   "http://www.w3.org/TR/html4/loose.dtd">
<html>
  <head>
    <title> 
      <% if current_user.administrator %>
        Abelo &rarr; <%= _('Administration') %>  
      <% else %>
        Abelo 
      <% end %>
    </title>
    <%= javascript_include_tag :defaults %>
    <%= javascript_include_tag 'fckeditor/fckeditor' %>
    <%= design_all_header_tags %>
    <link rel="shortcut icon" href="<%=image_path('logo.ico')%>" />
  </head>

  <body >
    <div id="warp">
      <div id="frame">
        <%= main_menu %>

        <div id="header">
          <div id="info_org">
            <% if current_user.administrator? %>
              <span><%= _('Abelo Administration') %></span>
            <% else %>
              <span><%= _('Abelo') %></span>
            <% end %>
          </div>

          <div id="banner_top"><span>Abelo</span></div>
          
          <div id="userbar">
            <div class="login_bar" >
              <% if current_user.administrator %>
                <%= design_display_button('go-jump' , _('Go to'), {}, {:id => "goto", :accesskey => "g", :onclick => visual_effect(:toggle_slide, 'menu')}, true ) %>
              <% end %>
              <%= design_display_button('edit_small' , _('Edit'), {:controller => 'users', :action => 'edit', :id => self.current_user}, :id => "edit_profile", :accesskey => "e") %> 
              <%= design_display_button( 'system-log-out', _('Logout'), {:organization_nickname => nil, :controller => 'users', :action => 'logout'}, :id => "logout", :accesskey => "q", :confirm => _('Exit from system?'), :method => 'post') %>
            </div>
            <%= display_navigation_bar %> 
          </div>
        </div>

        <%= notice_box flash[:notice] %>

        <%= tabbed_navigation 'first' %>

        <div id="content">
          <%= design_display(yield) %>
        </div>

        <div id="footer">
          <%= footer %>
        </div>
      </div>
    </div>
  </body>
</html>
