<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
   "http://www.w3.org/TR/html4/loose.dtd">
<html>
  <head>
    <title>Abelo &rarr; <%= @organization.name %> &rarr; <%= @controller.controller_name  %> </title>
    <%= javascript_include_tag :defaults %>
    <%= javascript_include_tag 'fckeditor/fckeditor' %>
    <%= design_all_header_tags %>
  </head>

  <body >
    <div id="warp">
      <div id="frame">

        <%= main_menu %>

        <div id="header">
          <img id="logo_org" src=<%="/images/org_#{@organization.nickname}.png" %> alt="<%= @organization.nickname %>" height="75px" width="75px">
          <div id="info_org">
            <span><%= @organization.name %></span><br />
            <%= _('CNPJ')%>: <%= @organization.cnpj %>
          </div>

          <img id="banner_top" src="/images/bannerabelo_160x75.jpg" alt="Abelo - www.Colivre.coop.br" height="75px" width="160px">
          <div id="userbar">
            <div class="login_bar" >
              <%= design_display_icon( 'go-jump' , _('Go to'), {}, {:id => "goto", :accesskey => "g", :onclick => visual_effect(:toggle_slide, 'menu')}, true ) %>
              <%= design_display_icon( 'edit_small' , _('Edit'), {:controller => 'users', :action => 'edit', :id => self.current_user}, :id => "edit_profile", :accesskey => "e") %> 
              <%= design_display_icon( 'system-log-out', _('Logout'), {:controller => 'users', :action => 'logout'}, :id => "logout", :accesskey => "q", :confirm => _('Exit from system?'), :method => 'post') %>
            </div>
            <%= display_navigation_bar %> 
          </div>
        </div>

        <%= notice_box flash[:notice] %>

        <%= tabbed_navigation 'first' %>

        <div id="content">
          <%= design_display(yield) %>
        </div>

<div id="sidebar">

<!-- Item Bar Options -->
<p><a href="#" onclick="Effect.toggle('options_cash_flows','slide',{duration:1}); if(this.style.borderBottom == '') { this.style.borderBottom = '1px'; } else { this.style.borderBottom = ''; }; return false;" class="show_itembar" style="border-bottom: none;">New department</a></p>
<div id="options_cash_flows" class="itembar">
<div>
<form action="/one/departments/create" method="post">


<!--[form:department]-->
<p><label for="department_name">Name</label><br/>
<input id="department_name" name="department[name]" size="30" type="text" /></p>
<!--[eoform:department]-->


  <input name="commit" type="submit" value="Create" />

</form>

<p><a href="#" onclick="Effect.toggle('options_cash_flows','slide',{duration:1}); return false;" class="hide_itembar"><span>Hide</span></a></p>
</div>

        <div id="footer">
          <%= footer %>
        </div>
      </div>
    </div>
  </body>
</html>
