<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
   "http://www.w3.org/TR/html4/loose.dtd">
<html class="controller-<%= params[:controller] %> action-<%= params[:action] %>">
  <head>
    <title> <%= _('Abelo') %> </title>
    <%= javascript_include_tag 'scriptaculousx' %>
    <%= stylesheet_link_tag   'comatose_admin' %>
    <%= javascript_include_tag 'fckeditor/fckeditor' %>
    <%= design_all_header_tags %>
    <%= javascript_include_tag 'comatose_admin' %>
    <link rel="shortcut icon" href="<%=image_path('logo.ico')%>" />
  </head>

  <body >
  <%= image_tag 'spinner.gif', :id=>'spinner', :align=>'absmiddle', :style=>'display:none; float:left;' %>

    <div id="warp">
      <div id="frame">

        <%= main_menu %>

        <div id="header">
          <div style="background-image: url(<%= image_path('org_toca.png') %>)"
               id="logo_org"><span> <%= _('Organization Logo') %></span></div>
          <div id="info_org">
            <span><%= @organization.name %></span><br />
            <%= _('CNPJ')%>: <%= @organization.cnpj %>
          </div>
          <div id="banner_top"><span>Abelo</span></div>
          <div id="userbar">
            <div class="login_bar">
              <%= design_display_function_button( 'go-jump', _('Go to'), {:id => "goto", :accesskey => "g", :onclick => visual_effect(:toggle_slide, 'menu', :duration => 0.6)}) %>
              <%= design_display_button( 'edit_small' , _('My account'), {:controller => 'public', :action => 'edit_user', :id => self.current_user}, :id => "edit_profile", :accesskey => "e") %> 
              <%= design_display_button( 'system-log-out', _('Logout'), {:organization_nickname => nil, :controller => 'users', :action => 'logout'}, :id => "logout", :accesskey => "q", :confirm => _('Exit from system?'), :method => 'post') %>
            </div>
            <%= display_navigation_bar %> 
          </div>
        </div>

        <%= notice_box flash[:notice] %>

        <%= tabbed_navigation 'first' %>

        <div id="content">
          <%= design_display(yield) %>
        </div>

        <div id="footer">
          <%= footer %>
        </div>
      </div>
    </div>
    <%= localist_menu %>
  </body>
</html>
