<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
   "http://www.w3.org/TR/html4/loose.dtd">
<html class="controller-<%= params[:controller] %> action-<%= params[:action] %>" id="abelo_html_id">
<head>
  <title> <%= t(:abelo) %> </title>
  <%= design_all_header_tags %>
  <%= javascript_include_tag 'comatose_admin' %>
  <%= javascript_include_tag 'showAccessKeys' %>
  <%= javascript_include_tag 'scroolItemsTable' %>
  <%= include_lightbox_header %>
  <link rel="shortcut icon" href="<%=image_path('logo.ico')%>" />
</head>
<body onload="setInterval('scroolItemsTable()',1000)">
<%= image_tag 'spinner.gif', :id=>'spinner', :align=>'absmiddle', :style=>'display:none; float:left;' %>

<div id="header">

  <div id="user_bar">

    <div id="login_bar">
      <%= button( 'edit_small' , t(:edit_preferences), :edit_small, {:controller => 'public', :action => 'edit_user', :id => self.current_user}, :id => "edit_profile", :accesskey => "e", :addclass => "bt_small") %>
      <%= button( 'system-log-out', t(:logout), :logout, {:organization_nickname => nil, :controller => 'users', :action => 'logout'}, :id => "logout", :accesskey => "q", :confirm => t(:exit_from_system), :method => 'post', :addclass => "bt_small") %>
    </div> <!-- login_bar -->
    
    <div id="org_bar">
      <div id="org_link"> <%= link_to_organization @organization %> </div>
      <div id="salesman"> <%= t(:salesman_name, :name => self.current_user.login) %> </div>
    </div> <!-- org_bar -->

  </div><!-- user_bar -->

</div><!-- header -->


<div id="content">
  <div id='abelo_action'>
    <%= yield %>
  </div>
</div><!-- content -->


<div id="footer">
  <div id="banner_bottom"><span> <%= t(:abelo) %> </span></div>
</div><!-- footer -->

<%= link_to_function content_tag(:span,t(:access_keys_help)), "showaccesskeys({intro: '#{t(:this_are_the_access_keys_on_this_page)}'})", :id => 'show_access_keys', :class => 'button help', :accesskey => 'h' %> 

</body>
</html>
