<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
   "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
  <title>Abelo &rarr; <%= @organization.name %> &rarr; <%= @controller.controller_name  %> </title>
  <link href="/icons/neu/style.css" media="screen" rel="Stylesheet" type="text/css" >
  <link href="/template/abelo_gold/css/style.css" media="screen" rel="Stylesheet" type="text/css" />
  <%= javascript_include_tag :defaults %>
  <%= stylesheet_link_tag 'autocomplete' %>
</head>

<body onload='if (document.forms[0] != null) { document.forms[0].elements[0].focus(); }'>
<div id="warp">
  
<div id="header">

  <div id="userbar">
    <div class="login_bar">
      <%= link_to _('Edit preferences'), {}, :accesskey => 'e', :id => 'edit_profile' %>
      &nbsp;
      <%= link_to _('Close'), {:controller => 'users', :action => 'logout'}, :accesskey => "q", :id => 'logout', :post => true, :confirm => _('Exit from system?') %>
    </div>
    <div class="sales_bar"></div>
    <%= link_to_organization @organization %> | <%= _('Salesman: %s') % self.current_user.login %>
  </div>
  <h1 class="status"> CAIXA ABERTO <h1>
</div>

<div id='content'>

  <div id='sidebar'>
  <!-- sidebar -->

  <div id="cumpom_bar">
    <%= link_to content_tag('span', _('Payment')), {:controller => 'point_of_sale', :action => 'payment', :id => @sale}, :id => 'payment' %>
    <%= link_to content_tag('span', _('Cancel sale')), {:controller => 'point_of_sale', :action => 'cancel', :id => @sale}, :id => 'cancel_sale', :confirm => _('Are you sure you want to cancel this sale?') %>
  </div>



<p style="color: green"><%= flash[:notice] if flash[:notice] %></p>

<%= yield %>

</body>

</html>

