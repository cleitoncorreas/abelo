<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
   "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
  <title>Abelo &rarr; <%= @organization.name %> &rarr; <%= @controller.controller_name  %> </title>
  <%= javascript_include_tag :defaults %>
  <%= stylesheet_link_tag 'point_of_sale' %>
  <%= design_icon_theme_stylesheet_link_tags %>
</head>

<body onload='if (document.forms[0] != null) { document.forms[0].elements[0].focus(); }'>

<div id="header">

  <div id="user_bar">

    <div id="login_bar">
      <%= button( 'edit_small' , _('Edit prederences'), :edit_small, {:controller => 'users', :action => 'edit', :id => self.current_user}, :id => "edit_profile", :accesskey => "e", :addclass => "bt_small") %>
      <%= button( 'system-log-out', _('Logout'), :logout, {:controller => 'users', :action => 'logout'}, :id => "logout", :accesskey => "q", :confirm => _('Exit from system?'), :method => 'post', :addclass => "bt_small") %>
    </div> <!-- login_bar -->
    
    <div id="org_link"> <%= link_to_organization @organization %> </div>
    
    <div id="salesman"> <%= _('Salesman: <i>%s</i>') % self.current_user.login %> </div>

  </div><!-- user_bar -->

  <h1 class="status"> CAIXA ABERTO </h1>

</div><!-- header -->


<div id="content">

  <div id="cumpom_bar">
    <%= link_to content_tag('span', _('Cancel sale')), {:controller => 'point_of_sale', :action => 'cancel', :id => @sale}, :id => 'cancel_sale', :confirm => _('Are you sure you want to cancel this sale?') %>
    <%= link_to content_tag('span', _('Payment')), {:controller => 'point_of_sale', :action => 'payment', :id => @sale}, :id => 'payment' %>
  </div>

  <div id="cumpom_sales">
    <div id="items_table">
      <%= render :partial => 'point_of_sale/table' %>
    </div>
  </div>    

</div><!-- content -->

<!--
<p style="color: green"><%= flash[:notice] if flash[:notice] %></p>
-->

  <%= yield %>

<div id="footer">

<div id="pointsales_bar">
  <ul>
    <li><a href="#" class="button_main" id="button_reforco" accesskey="r"><span>Refor√ßo</span></a></li>
    <li><a href="#" class="button_main" id="button_sangria" accesskey="s"><span>Sangria</span></a></li>
  </ul>
</div><!-- pointsales_bar -->
<div id="banner_bottom"><span>Abelo</span></div>

</div><!-- footer -->

</body>

</html>
