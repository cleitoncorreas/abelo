<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
   "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
  <title>Abelo &rarr; <%= @organization.name %> &rarr; <%= @controller.controller_name  %> </title>
  <%= javascript_include_tag :defaults %>
  <%= design_all_header_tags %>
</head>

<body onload='if (document.forms[0] != null) { document.forms[0].elements[0].focus(); }'>
<div id="warp">
  
<div id="header">

  <div id="userbar">

    <div class="login_bar">
      <%= link_to _('Edit preferences'), {}, :accesskey => 'e', :id => 'edit_profile' %>
      &nbsp;
      <%= link_to _('Close'), {:controller => 'users', :action => 'logout'}, :accesskey => "q", :id => 'logout', :method => 'post', :confirm => _('Exit from system?') %>
    </div> <!-- login_bar -->

    <%= link_to_organization @organization %> | <%= _('Salesman: %s') % self.current_user.login %>
  </div>
  
  <h1 class="status"> CAIXA ABERTO </h1>
      
</div>

<div id='content'>

  <div id='sidebar'>
  <!-- sidebar -->

    <div id="cumpom_bar">
      <%= link_to content_tag('span', _('Payment')), {:controller => 'point_of_sale', :action => 'payment', :id => @sale}, :id => 'payment' %>
      <%= link_to content_tag('span', _('Cancel sale')), {:controller => 'point_of_sale', :action => 'cancel', :id => @sale}, :id => 'cancel_sale', :confirm => _('Are you sure you want to cancel this sale?') %>
    </div>
  
    <div id="cumpom_sales">
      <div id='items_table'>
        <%= render :partial => 'point_of_sale/table' %>
      </div>
    </div>    

  </div>
  <!-- sidebar -->
</div>

<!--
<p style="color: green"><%= flash[:notice] if flash[:notice] %></p>
-->

  <%= yield %>

</div>
<div id="footer">

<div id="pointsales_bar">
<ul>
<li><a href="#" class="button_main" id="button_reforco" accesskey="r"><span>Refor√ßo</span></a></li>
<li><a href="#" class="button_main" id="button_sangria" accesskey="s"><span>Sangria</span></a></li>
</div>
<img id="banner_bottom" src="/images/bannerabelo_160x75.jpg" "Banner - Abelo" height="75px" width="160px">

</div>

</body>

</html>

