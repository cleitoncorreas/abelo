<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
   "http://www.w3.org/TR/html4/loose.dtd">
<html>
  <head>
    <title> <%= _('Abelo') %>  </title>
    <%= design_all_header_tags %>
    <%= javascript_include_tag :defaults %>
  </head>

  <body>
    <div id="warp">
      <div id="frame">
        <div id="header">
          <div id="banner_header"> </div>
        </div>

        <%= notice_box flash[:notice] %>

        <div id="content">
          <div id="center_box">
            <%= yield %>
          </div>
        </div>
        <div id="footer">
          <%= footer %>
        </div>
      </div>
    </div>
  </body>
</html>

