<%= error_messages_for 'commercial_proposal' %>

<%= link_to_close_popup " ", {:class => 'button_close'}, 'add_section', 'proposal_sections' %>

<h2><%= _('New section') %></h2>

<%= popup_form_tag( {:action => 'add', :id => @commercial_proposal_id } ) %>

<p><label for="section_name"><%= _('Name') %></label>
<%= text_field 'commercial_proposal_section', 'name'%></p>

<%= submit_tag _('Add section') %>

<%= end_form_tag %>
