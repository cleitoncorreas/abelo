<h2>
  <%= t(:search_user) %>
  <%= link_to_close_popup t(:close), {:class => 'button_close'}%>
</h2> 

<% form_remote_tag :url => params.merge({ :action => 'search_user', :organization_id => @organization}), :update => 'search_result' do %>
  <%= text_field_tag('search') %>
  <%= submit_tag t(:search) %>
<% end %> 

<div id='search_result'>
</div>
