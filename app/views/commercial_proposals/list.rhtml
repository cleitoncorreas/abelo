
<%= title('Listing commercial proposals') %>

<% form_tag ( { :action => 'list', :is_template => @is_template }, { :class => 'search_itens' } ) do %>
  <%= text_field 'commercial_proposal', 'name', :class => 'filter_field' %>
  <%= submit_tag( '', { :class => 'button button_search', :title => _('Search commercial_proposal') }) %>
  <%= button (_("New commercial_proposal"), :new, :action => 'new' ) %>
<% end %>

<div class="auto_complete" id="commercial_proposal_name_auto_complete"></div>
<%= auto_complete_field :commercial_proposal_name, :url => {:action => 'autocomplete_name', :is_template => @is_template }, :indicator => 'auto_list'%>
<div id="auto_list" style="display:none;">
</div>

<ul class="info_list commercial_proposal">
  <% @commercial_proposals.sort_by{|cp| cp.name}.map do |c| %>
<%= display_list(
  [
    { :content => [
      button (_('Show'), :show, :action => 'show', :id => c.id),
      button (_('Edit'), :edit, :action => 'edit', :id => c.id),
      button (_('Destroy'), :destroy, {:action => 'destroy', :id => c.id},
                            :post => true,
                            :confirm => _('Are you sure?'))], :option => 'button' },
    { :content => c.name, :option => 'name'}
  ]
)
%>
<% end %>
</ul>
<%= pagination_links(@commercial_proposal_pages, :params => {:query => @query, :is_template => @is_template}) %>
