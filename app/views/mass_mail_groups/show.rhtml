<%= render :partial => 'menu' %>

<%= title _("%s") % @mass_mail_group.name %>

<%= display_show_info @mass_mail_group %>

<%= display_show_info_options(@mass_mail_group) %>

<div class="display_info_options">
  <%= lightbox_button('add', _('Add'), :add_system_actors, {:action => 'add_system_actors', :id => @mass_mail_group}, {:class => 'with_text'}) %>
  <%= lightbox_button('remove', _('Remove'), :remove_system_actors, {:action => 'remove_system_actors', :id => @mass_mail_group}, {:class => 'with_text'}) unless @mass_mail_group.system_actors.empty? %>
</div>
