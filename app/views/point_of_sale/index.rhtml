<%= title _("Point of sale") %>

<% unless @pending_sales.empty? %>
  <p><%= _('Pending sales:') %>
  <ul>
  <% @pending_sales.each do |sale| %>
    <li><%= link_to sale.id, :action => 'main', :id => sale.id %></li>
  <% end %>
  </ul>
<% end %>

<div class='button_bar'>
  <%= button _('New sale'), :add, { :action => 'new' }, { :post => true } %>
</div>
