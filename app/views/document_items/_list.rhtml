<div id="section_items">
  <ul>
  <% for item in items %>
    <li><%= item.description %>
    <%= link_to_remote _('Edit'), :url => {:controller => 'commercial_proposal_items', :action => 'edit', :id => item.id, :commercial_proposal_id => @commercial_proposal.id }, :update => 'new_component' %>
    <%= link_to_remote _('Remove'), :url => {:controller => 'commercial_proposal_items', :action => 'destroy', :id => item.id, :commercial_proposal_id => @commercial_proposal.id }, :update => 'proposal_sections', :confirm => _('Are you sure'), :post => true %></li>
  <% end %>
  </ul>
</div>
