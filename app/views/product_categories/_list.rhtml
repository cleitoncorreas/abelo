  <tr>
    <td><%= '&nbsp;&nbsp;' * product_category.level  %><%=  product_category.name %></td>
    <td><%= button t(:new_subcategory), :add, :action => 'new', :parent_id => product_category %></td>
    <td><%= button t(:edit), :edit, :action => 'edit', :id => product_category %></td>
    <td><%= button t(:destroy'),_:remove,_{_:action_=>_'destroy',_:id_=>_product_category_},_:confirm_=>__('are_you_sure?), :method => 'post' %></td>
  </tr>
  <% for child in product_category.children %>
    <%= render :partial => 'list', :locals => { :product_category => child } %>
  <% end %>
