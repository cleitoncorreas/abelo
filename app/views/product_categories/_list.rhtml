  <tr>
    <td><%= '&nbsp;&nbsp;' * product_category.level  %><%=  product_category.name %></td>
    <td><%= button _('New subcategory'), :add, :action => 'new', :parent_id => product_category %></td>
    <td><%= button _('Edit'), :edit, :action => 'edit', :id => product_category %></td>
    <td><%= button _('Destroy'), :remove, { :action => 'destroy', :id => product_category }, :confirm => _('Are you sure?'), :method => 'post' %></td>
  </tr>
  <% for child in product_category.children %>
    <%= render :partial => 'list', :locals => { :product_category => child } %>
  <% end %>
